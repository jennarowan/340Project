<html>

<link rel="stylesheet" href="{{ url_for('static', filename='styles.css') }}">
<title>Delete Customer</title>

<header>
    <h1>JL Liquors Inc.</h1>
</header>

<body>
    <div>
        <form id="deleteCustomer" action="/customers-delete/{{customerNum}}" method="post">
        <table border="1" cellpadding="5"> 
            <h1> Deleting Customer: </h1>
            <!-- Access data tuple passed from app.py -->
            {% if customers %}
                <thead>
                    <tr>
                        <!-- Iterate through each key in the first entry to get the column name -->
                        {% for key in customers[0].keys() %}

                        <!-- Create a <th> tag with the key inside of it, this will be our header row -->
                        <th>{{ key }}</th>
                        
                        <!-- End of this for loop -->
                        {% endfor %} 
                    </tr>

                <tbody>
                    <!-- Now, iterate through every item in data -->
                    {% for customer in customers %}
                    <tr>
                        <!-- Then iterate through every key in the current item dictionary -->
                        {% for key in customer.keys() %}
                       
                        <!-- Create a <td> element with the value of that key in it -->
                        <td>{{customer[key]}}</td> {% endfor %} 
                    </tr> 
                    {% endfor %} 
            {% endif %} 
            <input type="hidden" value="{{customerNum}}" class="form-control" id="customerID" name="customerID" required>
        </table>
        
        <input type="submit" value="Delete Customer" name="Delete_Customer" class="btn btn-primary" style="margin:.5rem;">
        <a href='/customers'><input class="btn" type="button" value="cancel"></a>
        </form>
    </div>
</body>

