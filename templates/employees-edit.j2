<html>

<head>
	<title>Edit Employee</title>
    <link href="style.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <div>
        <table border="1" cellpadding="5"> 
            <caption> Editing Employee: </caption>
            <!-- Access data tuple passed from app.py -->
            {% if employees %}
                <thead>
                    <tr>
                        <!-- Iterate through each key in the first entry to get the column name -->
                        {% for key in employees[0].keys() %}

                        <!-- Create a <th> tag with the key inside of it, this will be our header row -->
                        <th>{{ key }}</th>
                        
                        <!-- End of this for loop -->
                        {% endfor %} 
                    </tr>

                <tbody>
                    <!-- Now, iterate through every item in data -->
                    {% for employee in employees %}
                    <tr>
                        <!-- Then iterate through every key in the current item dictionary -->
                        {% for key in employee.keys() %}
                       
                        <!-- Create a <td> element with the value of that key in it -->
                        <td>{{employee[key]}}</td> {% endfor %} 
                    </tr> 
                    {% endfor %} 
            {% endif %} 
        </table>
        
        <div id="edit">
        
            <form id="editEmployee" action="/employees-edit/{{employeeNum}}/{{ssn}}/{{firstName}}/{{lastName}}/{{phone}}/{{addressStreet}}/{{addressCity}}/{{addressState}}/{{addressZip}}" method="post">
                <p></p>
                <legend><strong>Edit Employee</strong></legend>
                <p></p>
                <fieldset>
                    <!-- We can preset form inputs to match attributes currently employeed for 'id' of employee to be updated via value= and accessing our passed data tuple -->
                    <!-- Create hidden form input to employee the passed 'id' of the employee we are editing so we can access it easily in our 'POST' method in our app.py -->
                    <input type="hidden" value="{{employeeNum}}" class="form-control" id="employeeID" name="employeeID" required>
                    <p>
                    <label for="street">SSN: </label> <input type="text" class="form-control" name="ssn" id="ssn" value="{{ssn}}">
                    </p>
                    <p>
                    <label for="street">First Name: </label> <input type="text" class="form-control" name="firstName" id="firstName" value="{{firstName}}">
                    </p>
                    <p>
                    <label for="street">Last Name: </label> <input type="text" class="form-control" name="lastName" id="lastName" value="{{lastName}}">
                    </p>
                    <p>
                    <label for="street">Phone #: </label> <input type="text" class="form-control" name="phoneNumber" id="phoneNumber" value="{{phone}}">
                    </p>
                    <p>
                    <label for="street">Street: </label> <input type="text" class="form-control" name="street" id="street" value="{{addressStreet}}">
                    </p>
                    <p>
                    <label for="employeeID">City: </label> <input type="text" class="form-control" name="city" id="city" value="{{addressCity}}">
                    </p>
                    <p>
                    <label>State: </label> <input type="text" class="form-control" name="state" id="state" value="{{addressState}}">
                    </p>
                    <p>
                    <label>Zip: </label> <input type="text" class="form-control" name="zip" id="zip" value="{{addressZip}}">
                    </p>
                
                </fieldset>
                <input type="submit" value="Edit Employee" name="Edit_Employee" class="btn btn-primary" style="margin:.5rem;">
                <a href='/employees'><input class="btn" type="button" value="cancel"></a>
            </form>
</body>
</html>
