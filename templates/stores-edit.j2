<html>

<link rel="stylesheet" href="{{ url_for('static', filename='styles.css') }}">
<title>Edit Store</title>

<header>
    <h1>JL Liquors Inc.</h1>
</header>

<body>
    <div>
        <table border="1" cellpadding="5"> 
            <h1> Editing Store: </h1>
            <!-- Access data tuple passed from app.py -->
            {% if stores %}
                <thead>
                    <tr>
                        <!-- Iterate through each key in the first entry to get the column name -->
                        {% for key in stores[0].keys() %}

                        <!-- Create a <th> tag with the key inside of it, this will be our header row -->
                        <th>{{ key }}</th>
                        
                        <!-- End of this for loop -->
                        {% endfor %} 
                    </tr>

                <tbody>
                    <!-- Now, iterate through every item in data -->
                    {% for store in stores %}
                    <tr>
                        <!-- Then iterate through every key in the current item dictionary -->
                        {% for key in store.keys() %}
                       
                        <!-- Create a <td> element with the value of that key in it -->
                        <td>{{store[key]}}</td> {% endfor %} 
                    </tr> 
                    {% endfor %} 
            {% endif %} 
        </table>
        
        <div id="edit">
        
            <form id="editStore" action="/stores-edit/{{storeNum}}/{{addressStreet}}/{{addressCity}}/{{addressState}}/{{addressZip}}" method="post">
                <p></p>
                <fieldset>
                    <!-- We can preset form inputs to match attributes currently stored for 'id' of store to be updated via value= and accessing our passed data tuple -->
                    <!-- Create hidden form input to store the passed 'id' of the store we are editing so we can access it easily in our 'POST' method in our app.py -->
                    <input type="hidden" value="{{storeNum}}" class="form-control" id="storeID" name="storeID" required>
                    <p>
                    <label for="street">Street:</label> <input type="text" class="form-control" name="street" id="street" value="{{addressStreet}}">
                    </p>
                    <p>
                    <label for="customerID">City:</label> <input type="text" class="form-control" name="city" id="city" value="{{addressCity}}">
                    </p>
                    <p>
                    <label> State: </label> <input type="text" class="form-control" name="state" id="state" value="{{addressState}}">
                    </p>
                    <p>
                    <label> Zip: </label> <input type="text" class="form-control" name="zip" id="zip" value="{{addressZip}}">
                    </p>
                    <p>                
                </fieldset>
                <p></p>
                <input type="submit" value="Edit Store" name="Edit_Store" class="btn btn-primary" style="margin:.5rem;">
                <a href='/stores'><input class="btn" type="button" value="Cancel"></a>
            </form>
</body>

