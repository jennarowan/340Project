<html>

<title>Liquors</title>
<link rel="stylesheet" href="{{ url_for('static', filename='styles.css') }}">
<script language="JavaScript">
		function showform(dowhat) {
			if (dowhat == 'insert'){
				document.getElementById('browse').style.display = 'none';
				document.getElementById('insert').style.display = 'block';
			}
			else { //by default display browse
				document.getElementById('browse').style.display = 'block';
				document.getElementById('insert').style.display = 'none';
			}
		}
    function newLiquor() { showform('insert'); }
    {# function updateLiquor(pid) { showform('update'); }
    function deleteLiquor(pid) { showform ('delete'); } #}
    function browseLiquor() { showform ('browse'); }
    {# function showAll() { showform ('all'); } #}
</script>

<header>
    <h1>JL Liquors Inc.</h1>
</header>

<body onload="browseLiquor()">
<h1>Liquors</h1>

[ <a href="/">Home</a> ~ <a href="orders">Orders</a> ~ <a href="stores">Stores</a> ~ <a href="customers">Customers</a> ~ <a href="employees">Employees</a> ~ <a href="rewardtiers">Rewards Tiers</a> ~ <a href="liquorsorders">Liquor Orders</a>]

<div id="browse">
{# <p><a href="#" onClick="showAll()">Show CRUD</a> </p> #}
<p></p>
<table border="1" cellpadding="5">
  <tr>
    {% for key in liquors[0].keys() %}

    <th>{{ key }}</th>

    {% endfor %}

    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <tbody>

  {% for liquor in liquors %}
  <tr>
    {% for key in liquor.keys() %}

    <td>{{liquor[key]}}</td>
    {% endfor %}

    <td><a href="/liquors-edit/{{liquor['Product #']}}/{{liquor['Name']}}/{{liquor['Size (Ml)']}}/{{liquor['Price ($)']}}" class="edbtn"><img src={{ edit }} width=30px height=30px></a></td>
    <td><a href="/liquors-delete/{{liquor['Product #']}}" class="edbtn"><img src={{ trash }} width=30px height=30px></a></a></td>
    
  </tr>
  {% endfor %}
  </table>

<input class="btn" type="submit" name="newLiquor" onClick="newLiquor()" id="newLiquor" value="Add New Liquor">

</div> 
<div id="insert">
    <form method="POST" id="addLiquor">
        <p></p>
        <legend><strong>Add New Liquor</strong></legend>
        <p></p>
          <fieldset class="fields">
            <p>
            <label>Product ID:</label> <input type="text" name="productID">
            </p>
            <p>
            <label>Product Name:</label> <input type="text" name="productName">
            </p>
            <p>
            <label>Product Size (Ml):</label> <input type="text" name = "productSize(ML)">
            </p>
            <p>
            <label>Product Price:</label> <input type="text" name="productPrice">
            </p>
      </fieldset>
          <p></p>
          <input class="btn" type="submit" name="Add_Liquor" id="addLiquor" value="Add Liquor">
          <input class="btn" type="button" value="Cancel" onClick="browseLiquor()">
	</form> 
</div>
</body>

